<h1>
  Listing Users
  <div class="pull-right">
    <%= link_to 'New User', new_admin_user_path, class: "btn btn-success" %>
  </div>
</h1>
<table class="table">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.email %>
    </td>
    <td><%= user.roles.to_sentence %></td>
    <td>
      <%= link_to 'Edit', edit_admin_user_path(user) %>
      <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>  
    </td>
  </tr>
  <% end %>
</table>

